{
  "name": "js-design-patterns",
  "version": "1.0.0",
  "description": "JavaScript Design Patterns",
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "main": "src/index.js",
  "keywords": [
    "javascript",
    "js",
    "node",
    "es6"
  ],
  "scripts": {
    "***": "<------------------ build -------------------------------------->",
    "build": "babel src -d .compiled",
    "watch": "babel src -d .compiled --watch",
    "start": "babel-node src/index.js",
    "postinstall": "npm run flow:deps",
    "commit": "git cz",
    "release": "standard-version --no-verify -t ''",
    "****": "<----------------- lint --------------------------------------->",
    "lint": "npm run lint:js",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint:fix": "npm run lint:js -- --fix",
    "*****": "<---------------- tests -------------------------------------->",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch --updateSnapshot || true",
    "test:coverage": "jest --coverage --updateSnapshot || true",
    "test:coverage:open": "open reports/coverage/index.html",
    "test:dev": "jest --watch --coverage --updateSnapshot || true",
    "******": "<--------------- types --------------------------------------->",
    "flow": "flow",
    "flow:check": "flow check",
    "flow:deps": "flow-typed install"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.9",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "commitizen": "^3.0.4",
    "cz-customizable": "^5.2.0",
    "debug": "^4.1.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.87.0",
    "flow-typed": "^2.5.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "prettier": "^1.13.4",
    "standard-version": "^4.4.0"
  },
  "engines": {
    "node": "10.13.0",
    "npm": "6.4.1"
  }
}
