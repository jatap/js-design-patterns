{
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/standard",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },
  "plugins": [
    "standard",
    "jest",
    "flowtype"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jasmine": true,
    "jest/globals": true
  },
  "rules": {
    "strict": 0,
    "semi": [2, "always"],
    "quotes": [2,"double"],
    "no-unused-expressions": 0,
    "flowtype/no-types-missing-file-annotation": 0
  }
}
